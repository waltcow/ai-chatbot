# Docker environment file
# Copy this to .env.local and fill in your actual values

# Generate a random secret: `openssl rand -base64 32`
AUTH_SECRET=your_auth_secret_here

# NextAuth.js URL (important for Docker deployments)
AUTH_URL=http://0.0.0.0:3000

# Get your xAI API Key here for chat and image models: https://console.x.ai/
XAI_API_KEY=your_xai_api_key_here

# PostgreSQL database connection string (for Docker Compose setup)
POSTGRES_URL=postgresql://chatbot_user:your_secure_password@postgres:5432/chatbot

# Redis connection string (for Docker Compose setup)
REDIS_URL=redis://redis:6379

# PostgreSQL password for Docker Compose
POSTGRES_PASSWORD=your_secure_password

# App URL for metadata
NEXT_PUBLIC_APP_URL=http://localhost:3000