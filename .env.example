# Generate a random secret: `openssl rand -base64 32`
AUTH_SECRET=****

# NextAuth.js URL (set to your app's URL in production)
AUTH_URL=http://localhost:3000

# Get your xAI API Key here for chat and image models: https://console.x.ai/
XAI_API_KEY=****

# PostgreSQL database connection string
# For self-hosted PostgreSQL: postgresql://username:password@host:port/database
POSTGRES_URL=****

# Redis connection string (optional, used for stream resumability)
# For self-hosted Redis: redis://username:password@host:port
# If not provided, streams will work without persistence
REDIS_URL=****

# File storage is now handled locally in public/uploads/
# No external blob storage token needed

# App URL for metadata (optional, defaults to localhost:3000)
NEXT_PUBLIC_APP_URL=http://localhost:3000
